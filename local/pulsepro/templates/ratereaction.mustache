{{!
    @template local_pulsepro/Rate reaction template.

    Example context (json):
    {
        "reactionurl_dislike" : "http://moodleurl/local/pulsepro/reaction.php?rate=1"
    }
}}

<div class="btn-group">
    <a href="{{{reactionurl_like}}}"
        style="padding: 10px;color: #fff;background-color: #357a32;text-decoration-line: none;" >
        <div style="display: inline-block;
        vertical-align: middle;
        margin-right: 5px;"> {{#pix}} thumbsup, local_pulsepro, Like {{/pix}} </div>
        <span style="display: inline-block;padding: 0 !important;"> {{#str}} like, pulse {{/str}} </span>
    </a>
    <a href="{{{reactionurl_dislike}}}"
        style="padding: 10px;color: #fff;background-color: #ca3120;text-decoration-line: none;" >
        <div style="display: inline-block;
    vertical-align: middle;
    margin-right: 5px;"> {{#pix}} thumbsdown, local_pulsepro, Dislike {{/pix}} </div>
        <span style="display: inline-block;padding: 0 !important;"> {{#str}} dislike, pulse {{/str}} </span>
    </a>
</div>

